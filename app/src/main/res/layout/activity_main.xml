<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:text="select opponent Civilization"
                android:id="@+id/textView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitCenter"

                app:fontFamily="sans-serif-black"


                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="18sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"

                android:layout_marginStart="16dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/row0">

        <ImageButton
                android:id="@+id/r1col1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/r1col2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_athenians"
                android:contentDescription="Athenians"

                />

        <ImageButton
                android:id="@+id/r1col2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/r1col1"
                app:layout_constraintEnd_toStartOf="@+id/r1col3"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_britons" android:contentDescription="Britons"/>

        <ImageButton
                android:id="@+id/r1col3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/r1col2"
                app:layout_constraintEnd_toStartOf="@+id/r1col4"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_carthaginians"
                android:contentDescription="Carthaginians"
        />

        <ImageButton
                android:id="@+id/r1col4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/r1col3"
                app:layout_constraintEnd_toStartOf="@+id/r1col5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_spartans" android:contentDescription="Spartans"/>

        <ImageButton
                android:id="@+id/r1col5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/r1col4"
                app:layout_constraintEnd_toStartOf="@+id/r1col6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_celts" android:contentDescription="Gauls"/>

        <ImageButton
                android:id="@+id/r1col6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/r1col5"
                app:layout_constraintEnd_toStartOf="@+id/r1col7"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_iberians" android:contentDescription="Iberians"/>

        <ImageButton
                android:id="@+id/r1col7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/r1col6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_mauryas" android:contentDescription="Mauryas"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/row1">

        <ImageButton
                android:id="@+id/r2col1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/r2col2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_kushites" android:contentDescription="Kushites"/>

        <ImageButton
                android:id="@+id/r2col2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/r2col1"
                app:layout_constraintEnd_toStartOf="@+id/r2col3"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_macedonians" android:contentDescription="Macedonians"/>

        <ImageButton
                android:id="@+id/r2col3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/r2col2"
                app:layout_constraintEnd_toStartOf="@+id/r2col4"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_persians" android:contentDescription="Persians"/>

        <ImageButton
                android:id="@+id/r2col4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/r2col3"
                app:layout_constraintEnd_toStartOf="@+id/r2col5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_ptolemies" android:contentDescription="Ptolemies"/>

        <ImageButton
                android:id="@+id/r2col5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/r2col4"
                app:layout_constraintEnd_toStartOf="@+id/r2col6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_romans" android:contentDescription="Romans"/>

        <ImageButton
                android:id="@+id/r2col6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/r2col5"
                app:layout_constraintEnd_toStartOf="@+id/r2col7"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_seleucids" android:contentDescription="Seleucids"/>

        <ImageButton
                android:id="@+id/r2col7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@null"
                android:backgroundTint="#00FFFFFF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/r2col6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/emblem_han" android:contentDescription="Han"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
            android:layout_height="0dp"

            android:layout_width="match_parent"


            android:lines="15"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editTextTextMultiLine"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/row2"
            android:layout_marginEnd="5dp" app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>


